@page "/contact"
@inherits BasePageComponent
@using MyCompany.Common

<PageTitle>Contact Us - @Constants.Site.CompanyName</PageTitle>

<div class="container my-5">
    <div class="row g-5 justify-content-between align-items-start">
        <div class="col-md-5">
            <h2 class="display-5 fw-bold mb-4">Contact Us & We Can Work Together</h2>
            <p class="text-muted mb-5">Lorem ipsum dolor sit amet consectetur. Adipiscing nisi id at arcu enim ut gravida pulvinar. Tristique consectetur mi cursitor congue enim dignissim.</p>
            <form class="d-flex flex-column gap-3">
                <div>
                    <input type="text" class="form-control bg-light border-0 py-3" placeholder="Your Name" />
                </div>
                <div>
                    <input type="email" class="form-control bg-light border-0 py-3" placeholder="Your Email" />
                </div>
                <div>
                    <textarea class="form-control bg-light border-0 py-3" rows="4" placeholder="Your Message"></textarea>
                </div>
                <div>
                    <button type="submit" class="btn px-4 py-2" style="@($"background-color: {Constants.Colors.Primary}; color: white;")">
                        Submit Message <i class="fas fa-arrow-right ms-2"></i>
                    </button>
                </div>
            </form>
        </div>
        <div class="col-md-7">
            <img src="images/contact_us.jpg" alt="Contact Us" class="img-fluid" />
        </div>
    </div>
</div>
